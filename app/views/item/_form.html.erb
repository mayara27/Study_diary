<div class="form-group">
      <%= f.label :name, 'Titulo do item' %>
      <%= f.text_field :name, class: "form-control col-6" %>
    </div>
      
    <div class="form-group">
      <%= f.label :category, 'Categoria', for:"sel" %>
      <%= f.select "category", options_from_collection_for_select(Category.all, :name, :name), class:"form-control" %>
    </div>

      <div class="form-group">
        <%= f.label :Tipo, 'Tipo' %>
        <%= f.select :tipo,  ['Texto', 'Palestra', 'Video',  'Apostila',  'Curso']%>
      </div>

    <div class="form-group">
      <%= f.label :description, 'Descrição' %>
      <%= f.text_field :description, class: "form-control col-6 " %>
    </div>

    <div class="form-group">
      <%= f.label :deadline, 'Prazo' %>
      <%= f.date_field :deadline, class: "form-control col-6"  %>
    </div>
 
<% @title="Editar Item de Estudo" %>
<%= render partial: 'nav', locals: { item: @item } %>

<div class="container">
<%= form_for @item do |f| %>

      <%= render partial: 'form', locals: { f: f } %>
      
    <div class="form-group">
      <%= f.label :comment, 'Comentario' %>
      <%= f.text_area :comment, class: "form-control col-6" %>
    </div>
    
    <div class="checkbox">
      <%= f.label :done, 'Feito' %>
      <%= f.check_box :done %>
    </div>
    
     <div class="form-group">
      <%= f.submit 'Editar', class:"btn btn-outline-success col-5 my-2 my-sm-0" %>
    </div>
<% end %>
</div>
<% @title="Esqueceu sua senha?" %>

<div class="container h-100">
	<div class="d-flex justify-content-center h-100">
		<div class="user_card">

      <div class="d-flex justify-content-center form_container">

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <h2 class="mb-4" >Forgot your password?</h2>

          <%= render "users/shared/error_messages", resource: resource %>

            <div  class="input-group mb-2">
            <%= f.label :email, class:"input-group-text" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control input_user" %>
          </div>

          <div class="actions">
            <div class="d-flex justify-content-center mt-3 login_container">
              <%= f.submit "Send me reset password instructions",class:"btn login_btn" %>
            </div>
          </div>
        <% end %>
      </div>

      <div class="mt-4">
          <div class="d-flex justify-content-center links">
            <%= render "users/shared/links" %>
          </div>
        </div>

    </div>
  </div>
</div>